<div class="ml-4 mt-2">
  <h1 style="text-align: center;">Sign Up</h1>
</div>
<style>
  .form-control {
    margin-top: 5px;
  }
</style>
<form action="/users/create" method="POST" class="p-4">
  <input
    type="text"
    class="form-control"
    name="name"
    placeholder="Your Name"
    required
  />
  <input
    type="email"
    class="form-control"
    name="email"
    placeholder="Your Email"
    required
  />
  <input
    type="password"
    class="form-control"
    name="password"
    placeholder="Password"
    required
  />
  <input
    type="password"
    class="form-control"
    name="confirm_password"
    placeholder="Confirm Password"
    required
  />
  <input type="submit" class="btn btn-primary w-100 mt-3" value="Sign Up" />
</form>
