<link rel="stylesheet" href="/css/home.css" />

<div id="home-container">
  <section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user){ %>
    <form action="/posts/create" id="new-post-form" method="POST">
      <textarea
        name="content"
        class="form-control"
        cols="30"
        rows="3"
        placeholder="Type Here..."
        required
      ></textarea>
      <input type="submit" value="Post" class="btn btn-primary w-100 mt-2" />
    </form>
    <% } %>

    <div id="posts-list-container" style="overflow: scroll; height: 75vh;">
      <ul>
        <% for(post of posts){ %> <%- include('_post') -%> <%} %>
      </ul>
    </div>
  </section>

  <section id="user-friends">
    <h4>Friends</h4>
    <% for(u of all_users){%>
    <p>
      <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
    </p>
    <% } %>
  </section>
</div>
